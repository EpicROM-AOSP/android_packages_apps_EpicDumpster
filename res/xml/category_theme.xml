<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/category_theme_title" >
	
	<PreferenceCategory
    android:title="@string/general_category">
	
	<com.epic.support.preferences.SystemSettingListPreference
        android:key="settings_dashboard_style"
        android:title="@string/settings_dashboard_style_title"
        android:summary="@string/settings_dashboard_style_summary"
        android:entries="@array/settings_dashboard_style_entries"
        android:entryValues="@array/settings_dashboard_style_values"
        android:defaultValue="0" />
		
	</PreferenceCategory>	
	
	<PreferenceCategory
    android:title="@string/icons_category">

    <!-- Icon pack -->
    <Preference
        android:key="android.theme.customization.icon_pack"
        android:title="@string/theme_customization_icon_pack_title"
        android:summary="@string/theme_customization_icon_pack_summary"
        android:fragment="com.epic.dumpster.fragments.StatusbarIcons"/>

    <!-- Adaptive icon pack -->
    <Preference
        android:key="android.theme.customization.adaptive_icon_shape"
        android:title="@string/theme_customization_icon_shape_title"
        android:summary="@string/theme_customization_icon_shape_summary"
        android:fragment="com.epic.dumpster.fragments.IconShapes"/>

    <!-- Navbar Style -->
    <Preference
        android:key="android.theme.customization.navbar"
        android:title="@string/theme_customization_navbar_title"
        android:summary="@string/theme_customization_navbar_summary"
        android:fragment="com.epic.dumpster.fragments.NavbarStyles"/>

    </PreferenceCategory>

    <PreferenceCategory
    android:title="@string/fonts_category">

    <!-- Font style -->
    <Preference
        android:key="android.theme.customization.fonts"
        android:title="@string/theme_customization_font_title"
        android:summary="@string/theme_customization_font_summary"
        android:fragment="com.epic.dumpster.fragments.FontsPicker"/>

    </PreferenceCategory>
	
	 <PreferenceCategory
    android:title="@string/network_icons_category">

    <!-- Signal icon style -->
    <Preference
        android:key="android.theme.customization.signal_icon"
        android:title="@string/theme_customization_signal_icon_title"
        android:summary="@string/theme_customization_signal_icon_summary"
        android:fragment="com.epic.dumpster.fragments.SignalIcons"/>

    <!-- Data icon style -->
    <Preference
        android:key="android.customization.sb_data"
        android:title="@string/theme_customization_data_title"
        android:summary="@string/theme_customization_data_summary"
        android:fragment="com.epic.dumpster.fragments.DataStyles" />

    <!-- Wifi icon style -->
    <Preference
        android:key="android.theme.customization.wifi_icon"
        android:title="@string/theme_customization_wifi_icon_title"
        android:summary="@string/theme_customization_wifi_icon_summary"
        android:fragment="com.epic.dumpster.fragments.WifiIcons"/>

    </PreferenceCategory>

    <PreferenceCategory
    android:title="@string/sliders_category">

    <!-- Volume Styles -->
    <com.epic.support.preferences.SystemSettingListPreference
        android:key="custom_volume_styles"
        android:title="@string/volume_style_title"
        android:dialogTitle="@string/volume_style_title"
        android:entries="@array/volume_styles_entries"
        android:entryValues="@array/volume_styles_values"
        android:summary="%s"
        android:defaultValue="2" />

    </PreferenceCategory>

</PreferenceScreen>
