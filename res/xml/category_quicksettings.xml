<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/category_quicksettings_title" >
	
	<PreferenceCategory
    android:title="@string/general_category">

    <ListPreference
         android:key="qs_quick_pulldown"
         android:title="@string/qs_quick_pulldown"
         android:entries="@array/quick_pulldown_entries"
         android:entryValues="@array/quick_pulldown_values"
         android:defaultValue="0" />
		 
	<com.epic.support.preferences.SystemSettingSwitchPreference
         android:key="qs_footer_data_usage"
         android:title="@string/qs_show_data_usage_title"
         android:summary="@string/qs_show_data_usage_summary"
         android:defaultValue="true" />	 

    </PreferenceCategory>
	
	<PreferenceCategory
    android:title="@string/qs_cust_category">

    <com.epic.support.preferences.SystemSettingSeekBarPreference
         android:key="qs_transparency"
         android:title="@string/qs_transparency_title"
         android:summary="@string/qs_transparency_summary"
         android:defaultValue="100"
         settings:interval="1"
         android:max="100"
         settings:units="%"
         android:min="1" />

     </PreferenceCategory>
	
	<PreferenceCategory
          android:title="@string/qs_show_brightness_slider_title">

          <!-- Brightness slider -->
          <com.epic.support.preferences.SecureSettingListPreference
               android:key="qs_show_brightness_slider"
               android:title="@string/qs_show_brightness_slider_title"
               android:entries="@array/qs_show_brightness_slider_entries"
               android:entryValues="@array/qs_show_brightness_slider_values"
               android:defaultValue="1" />

          <com.epic.support.preferences.SecureSettingListPreference
               android:key="qs_brightness_slider_position"
               android:dependency="qs_show_brightness_slider"
               android:title="@string/qs_brightness_slider_position_title"
               android:entries="@array/qs_brightness_slider_position_entries"
               android:entryValues="@array/qs_brightness_slider_position_values"
               android:defaultValue="0" />

          <com.epic.support.preferences.SecureSettingSwitchPreference
               android:key="qs_show_auto_brightness"
               android:dependency="qs_show_brightness_slider"
               android:title="@string/qs_show_auto_brightness_title"
               android:summary="@string/qs_show_auto_brightness_summary"
               android:defaultValue="true" />

          <com.epic.support.preferences.SystemSettingSwitchPreference
               android:title="Brightness Percentage"
               android:key="BRIGHTNESS_TEXTVIEW"
               android:summary="show hide brightness percentage text"
               android:defaultValue="false" />

     </PreferenceCategory>

</PreferenceScreen>
